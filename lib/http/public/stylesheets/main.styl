
@import 'nib'

font-smoothing()
  -webkit-font-smoothing: arguments

bar(color)
  background: linear-gradient(top, color + 40%, color)
  border: 1px solid rgba(white, .2)
  box-shadow: 0 1px 1px 0 rgba(black, .6)

dark = #1A1919
darker = #111
light = #666
progress-bar-color = #00CCCC
inactive-bar-color = #00CCCC
complete-bar-color = #00CC7A
active-bar-color = #CCC500
failures-bar-color = #c00

body
  padding: 60px 50px
  font: 14px "helvetica neue", helvetica, arial, sans-serif
  background: dark url('/images/bg.jpg') no-repeat fixed 50% 0
  text-shadow: 0 1px 1px rgba(black, .3)
  font-smoothing: antialiased
  color: light

h1, h2, h3
  margin: 0 0 25px 0
  padding: 0
  font-weight: normal
  text-transform: capitalize
  color: white

button
a.button
input[type='submit']
  bold-button(glow: #00ABFA)

pre
  margin-top: 20px

#error
  absolute: top -50px right 15px
  padding: 20px
  transition: top 500ms, opacity 500ms
  opacity: 0
  background: rgba(black, .4)
  border: 1px solid rgba(light, .3)
  border-radius: 5px
  &.show
    top: 60px
    opacity: 1

#header
  absolute: top left
  background: darker
  height: 30px
  width: 100%
  border-bottom: 1px solid dark + 40%
  box-shadow: 0 0 2px 1px black
  color: light + 50%
  transition: height 300ms ease-out

#job-template
  display: none

.block
  position: relative
  margin: 2px
  float: left
  width: 25%
  padding: 30px 20px
  border: 1px solid rgba(dark, .8)
  border-top-color: rgba(darker, .9)
  border-left-color: rgba(darker, .9)
  box-shadow: 1px 1px 0 0 rgba(white, .05)
  border-radius: 4px
  background: rgba(black, .08)
  h2
    margin: 0
    absolute: top left
    padding: 5px
    font-size: 10px
    background: rgba(darker, .5)
    border-radius: 2px

.block.job
  .overlay
    opacity: 0
    absolute: top left
    background: rgba(black, .85)
    width: 100%
    height: 100%
    text-align: center
    transition: opacity 300ms ease-out
    ul
      margin: 0
      padding: 0
      width: 96%
      li
        width: 100%
        list-style: none
        &:first-child a
          border-radius: top 3px
        a
          display: block
          width: 100%
          padding: 5px
          text-decoration: none
          background: rgba(white, .05)
          color: white
          font-size: 13px
          &:hover
            background: rgba(white, .1)
          &:active
            background: rgba(white, .02)
            color: rgba(white, .5)
  &:hover .overlay
    display: block
    opacity: 1

.bar
  display: block
  padding: 2px 0
  border-radius: 2px
  font-size: 12px
  text-indent: 5px
  color: white
  opacity: 0
  transition: width 500ms ease-out, opacity 500ms ease-out
  .inactive &
    bar(inactive-bar-color)
  .complete &
    bar(complete-bar-color)
  .active &
    bar(active-bar-color)
  .failures &
    bar(failures-bar-color)
  .progress &
    bar(progress-bar-color)

table
  reset-table()
  tr td
    padding: 2px 5px

#stats
  absolute: top 1px left 10px
  margin: 0
  padding: 0
  transition: top 300ms ease-out
  li
    float: left
    padding: 0 15px 0 0
    list-style: none
    margin: 0
    &.inactive:hover .bar
      box-shadow: 0 0 4px 1px rgba(inactive-bar-color, .8)
    &.complete:hover .bar
      box-shadow: 0 0 4px 1px rgba(complete-bar-color, .8)
    &.active:hover .bar
      box-shadow: 0 0 4px 1px rgba(active-bar-color, .8)
    &.failures:hover .bar
      box-shadow: 0 0 4px 1px rgba(failures-bar-color, .8)
    a
      text-decoration: none
      color: inherit
    .bar
      margin-top: 4px

#job
  table td:first-child
    width: 35px