
font-smoothing()
  -webkit-font-smoothing: arguments

@import 'nib'
@import 'config'
@import 'scrollbar'
@import 'menu'
@import 'job'
@import 'error'

body
  user-select: none
  font: 14px "helvetica neue", helvetica, arial, sans-serif
  font-smoothing: antialiased
  background: bg
  color: light

h1, h2, h3
  margin: 0 0 25px 0
  padding: 0
  font-weight: normal
  text-transform: capitalize
  color: light

h2
  font-size: 16px
  margin-top: 20px

button
a.button
input[type='submit']
#pager li a
  bold-button(glow: #00ABFA)

pre
  margin-top: 20px

a
  text-decoration: none

table
  reset-table()
  tr td
    padding: 2px 5px
