font-smoothing()
  -webkit-font-smoothing: arguments

@import 'nib'
@import 'config'
@import 'scrollbar'
@import 'menu'
@import 'context-menu'
@import 'job'
@import 'actions'
@import 'error'

body
  font: 13px "helvetica neue", helvetica, arial, sans-serif
  font-smoothing: antialiased
  background: bg
  color: light

h1, h2, h3
  margin: 0 0 25px 0
  padding: 0
  font-weight: normal
  text-transform: capitalize
  color: light

h2
  font-size: 16px
  margin-top: 20px

button
a.button
input[type='submit']
  bold-button(glow:#00ABFA)

pre
  margin-top: 20px

a
  text-decoration: none
  cursor: pointer

table
  reset-table()
  tr td
    padding: 2px 5px

#loading
  width: 100%
  text-align: center
  margin-top: 40px
  margin-left: 20px
  canvas
    margin: 0 auto
