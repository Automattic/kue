#job
  .job(id='job-' + job.id)
    h1 Job

    script
      var currentJob = #{job.id};
      $(function(){
        init();
        pollStatsForJob(#{job.id}, 1000);
      });

    table
      tr
        td Id
        td= job.id
      tr
        td Type
        td= job.type
      tr
        td State
        td= job.state
      tr.priority(class=priority(job))
        td Priority
        td
          select#job-priority
            - each name, n in priorities
              - if (n == job.priority())
                option(value=n, selected)= name
              - else
                option(value=n)= name
      tr.progress
        td Progress
        td: span.bar= job.progress()

    h2 Data
    pre= inspect(job.data)

    - if (job.error())
      h2 Error
      pre= job.error()